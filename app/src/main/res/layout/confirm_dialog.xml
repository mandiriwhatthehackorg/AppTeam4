<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_credit_card_confirm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriad_pro_regular"
        android:textAlignment="center"
        android:padding="16dp"
        android:text="Apakah anda yakin telah menerima Kartu Kredit pengganti dan akan melakukan aktivasi dengan nomor kartu:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blueText"
        android:layout_margin="16dp"
        android:text="4895 9400 5600 0200"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_white"
            android:text="Batalkan"
            android:textColor="@color/blueButton"
            android:layout_margin="16dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/confirmation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:layout_margin="16dp"
            android:text="Aktivasi"
            android:textColor="#fff"
            android:textSize="14sp" />

    </LinearLayout>



</LinearLayout>