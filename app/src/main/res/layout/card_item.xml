<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:orientation="horizontal"
        android:id="@+id/image"
        android:layout_width="228dp"
        android:layout_height="143dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/content_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriad_pro_regular"
            android:textColor="@color/blackText"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="Detail Kartu Kredit"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/myriad_pro_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/blackText"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:text="Nomor Telepon Pengguna"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/myriad_pro_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/greyText"
                android:textSize="14sp"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="16dp"
                android:text="082219441899"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/myriad_pro_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/blackText"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:text="Jumlah Tagihan"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/myriad_pro_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/greyText"
                android:textSize="14sp"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="16dp"
                android:text="Rp 50.000.000,-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/myriad_pro_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/blackText"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:text="Pembayaran Minimum"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/myriad_pro_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/greyText"
                android:textSize="14sp"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="16dp"
                android:text="Rp 10.000.000,-"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:background="@color/greyLine"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/block_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_corner"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="23dp"
                        android:src="@drawable/iv_block_credit_card"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="Blokir Kartu"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_corner"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="23dp"
                        android:src="@drawable/iv_limit_credit_card"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="Ajukan Kenaikan Limit"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriad_pro_regular"
            android:text="Info Transaksi Terakhir"
            android:textColor="@color/blackText"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>