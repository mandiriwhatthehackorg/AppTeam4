<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.verification.PhoneNumberActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/top_background">

        <ImageView
            android:id="@+id/mobile_img"
            android:layout_width="45dp"
            android:layout_height="66dp"
            android:layout_above="@id/verif_tx"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_mobile" />

        <TextView
            android:id="@+id/verif_tx"
            android:layout_width="match_parent"
            android:fontFamily="@font/myriad_pro_regular"
            android:layout_height="wrap_content"
            android:text="Verifikasi Nomor Anda"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textAlignment="center" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bottom_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/number_tx"
                android:layout_width="wrap_content"
                android:fontFamily="@font/myriad_pro_regular"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="+62"
                android:textColor="@color/blueText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/number_ed"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Masukan Nomor Anda"/>

        </LinearLayout>

        <Button
            android:id="@+id/send_otp"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_blue"
            android:text="Kirim OTP"
            android:textColor="#fff"
            android:layout_marginBottom="8dp"
            android:layout_above="@id/back_btn"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:fontFamily="@font/myriad_pro_regular"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="@color/blueButton"
            android:layout_alignParentBottom="true"
            android:text="Kembali"/>

    </RelativeLayout>


</LinearLayout>